<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView_ListaIngredienti"
        android:layout_width="134dp"
        android:layout_height="190dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="234dp"
        android:text="Lista Ingredienti" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="159dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_ListaIngredienti"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="209dp"
        android:text="Nota Birraio" />

    <EditText
        android:id="@+id/editText_NotaBirraio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView7"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="ancora nessuna nota..."
        android:inputType="textMultiLine" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="144dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText_NotaBirraio"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="224dp"
        android:text="Nota Amici" />

    <EditText
        android:id="@+id/editText_NotaAmici"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView8"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="31dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="ancora nessuna nota..."
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/btn_ModificaRicetta"
        android:layout_width="wrap_content"
        android:layout_height="77dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="32dp"
        android:text="modifica ricetta" />

    <Button
        android:id="@+id/btn_SalvaNote"
        android:layout_width="157dp"
        android:layout_height="77dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="32dp"
        android:layout_toStartOf="@+id/btn_ModificaRicetta"
        android:text="salva note" />

</RelativeLayout>