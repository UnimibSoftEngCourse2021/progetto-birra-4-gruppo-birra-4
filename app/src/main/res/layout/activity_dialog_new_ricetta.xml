<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp">

    <EditText
        android:id="@+id/editTextTitoloRicetta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/titolo_new_ricetta" />

    <TextView
        android:id="@+id/quantita_birra_ricetta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/birra_ricetta" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        >

        <TextView
            android:id="@+id/ingredienteMalto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/malto"
            android:textSize="20sp"
            android:layout_marginEnd="50dp"/>


        <EditText
            android:id="@+id/quantitaIngredienteMalto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:inputType="numberDecimal"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        >

        <TextView
            android:id="@+id/ingredienteOrzo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/orzo"
            android:textSize="20sp"
            android:layout_marginEnd="50dp"/>


        <EditText
            android:id="@+id/quantitaIngredienteOrzo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:inputType="numberDecimal"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        >

        <TextView
            android:id="@+id/ingredienteLievito"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lievito"
            android:textSize="20sp"
            android:layout_marginEnd="50dp"/>


        <EditText
            android:id="@+id/quantitaIngredienteLievito"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:inputType="numberDecimal"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        >

        <TextView
            android:id="@+id/ingredienteAcqua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/acqua"
            android:textSize="20sp"
            android:layout_marginEnd="50dp"/>


        <EditText
            android:id="@+id/quantitaIngredienteAcqua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:inputType="numberDecimal"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        >

        <TextView
            android:id="@+id/ingredienteZucchero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zucchero"
            android:textSize="20sp"
            android:layout_marginEnd="50dp"/>


        <EditText
            android:id="@+id/quantitaIngredienteZucchero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:inputType="numberDecimal"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        >

        <TextView
            android:id="@+id/ingredienteLuppolo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/luppolo"
            android:textSize="20sp"
            android:layout_marginEnd="50dp"/>


        <EditText
            android:id="@+id/quantitaIngredienteLuppolo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:inputType="numberDecimal"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        >

        <TextView
            android:id="@+id/ingredienteAdditivi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/additivi"
            android:textSize="20sp"
            android:layout_marginEnd="50dp"/>


        <EditText
            android:id="@+id/quantitaIngredienteAdditivi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:inputType="numberDecimal"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="16dp">

        <Button
            android:id="@+id/btn_back_ricetta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:layout_weight="1"
            android:text="@string/backricetta" />

        <Button
            android:id="@+id/btn_save_ricetta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_weight="1"
            android:text="@string/salvaricetta" />

    </LinearLayout>

</LinearLayout>